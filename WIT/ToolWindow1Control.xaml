<UserControl x:Class="WIT.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <DockPanel>
            <!-- 하단에 DB 연결 테스트 UI를 추가합니다. -->
            <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Margin="5">
                <Button Content="DB 연결 테스트" Click="TestDbConnection_Click" Margin="0,10,0,5"/>
                <TextBlock x:Name="DbStatusTextBlock" Text="DB 연결 상태: 대기 중..." />
            </StackPanel>

            <!-- 기존 트리 뷰는 남은 공간을 모두 차지하도록 합니다. -->
            <TreeView x:Name="PathTreeView" Margin="5" Background="Transparent">
                <!-- Items are generated from code-behind -->
            </TreeView>
        </DockPanel>
    </Grid>
</UserControl>

